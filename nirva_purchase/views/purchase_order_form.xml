<odoo>
  <data>
    
    <!-- Customizations in Purchase Order Form -->
    <record model="ir.ui.view" id="nirva_purchase_form">
      <field name="name">purchase_order_form_customizations</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="before">
          <field name="empresa_id" />
        </field>
        <field name="x_subcontrato" position="attributes">
          <attribute name="string">Concepto (Constrato/Subcontrato)</attribute>
        </field>
      </field>
    </record>

  </data>
</odoo>