<odoo>
  <data>
    
    <!-- Customizations in Purchase Order Form -->
    <record model="ir.ui.view" id="nirva_account_move_form">
      <field name="name">account_move_form_customizations</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">

        <field name="ref" position="replace">
        </field>

        
        <field name="partner_id" position="after">
          <field name="ref" nolabel="1" attrs="{'invisible':[('move_type', 'not in', ('in_invoice', 'in_receipt', 'in_refund'))]}"/>
          <field name="ref" attrs="{'invisible':[('move_type', 'in', ('in_invoice', 'in_receipt', 'in_refund', 'out_invoice', 'out_refund'))]}"/>
        </field>
        
        <field name="ref" position="attributes">
          <attribute name="string">Referencia de Factura (SAT)</attribute>
        </field>
        
      </field>
    </record>

  </data>
</odoo>