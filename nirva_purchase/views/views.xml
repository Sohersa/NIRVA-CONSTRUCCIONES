<odoo>
  <data>
    
    <!-- Customizations in Purchase Order Form -->
    <record model="ir.ui.view" id="nirva_purchase_form">
      <field name="name">purchase_order_form_customizations</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="before">
          <field name="empresa_id" />
        </field>
      </field>
    </record>

    <!-- Customizations in Purchase Requisition form -->
    <record model="ir.ui.view" id="nirva_purchase_requisition_form">
      <field name="name">purchase_requisition_customizations</field>
      <field name="model">purchase.requisition</field>
      <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form" />
      <field name="arch" type="xml">
        <field name="ordering_date" position="attributes">
          <!-- <attribute name="invisible">0</attribute> -->
          <attribute name="attrs">
            {'readonly': [('state','not in',('draft','in_progress','open','ongoing'))], 'invisible': True}
          </attribute>
        </field>
      </field>
    </record>

