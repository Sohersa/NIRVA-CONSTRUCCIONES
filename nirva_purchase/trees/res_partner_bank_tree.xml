<odoo>
  <data>

    <record model="ir.ui.view" id="nirva_view_partner_form">
      <field name="name">nirva_view_partner_form</field>
      <field name="model">res.partner</field>
      <field name="priority">100</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">

        <field name="acc_number" position="after">
          <field name="referencia_bancaria"/>
          <field name="oupp_contacto_de_sucursal"/>
        </field>

      </field>
    </record>

    <record model="ir.ui.view" id="nirva_view_partner_bank_form">
      <field name="name">nirva_view_partner_bank_form</field>
      <field name="model">res.partner.bank</field>
      <field name="inherit_id" ref="base.view_partner_bank_form"/>
      <field name="arch" type="xml">

        <xpath expr="//form/sheet/group[last()]">
          <group name="oupp_fields" string="Adicionales">
            <field name="referencia_bancaria"/>
            <field name="oupp_contacto_de_sucursal"/>
          </group>
        </xpath>

      </field>
    </record>

  </data>
</odoo>
