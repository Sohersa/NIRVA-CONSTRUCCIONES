<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="custom_purchase_form">
      <field name="name">pruchase_order_form_customizations</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="before">
          <field name="empresa_id" />
          <field name="sucursal_id" />
        </field>
      </field>
    </record>

    <record model="ir.ui.view" id="custom_partner_form">
      <field name="name">res_partner_form_customizations</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">

        <field name="parent_id" position="replace">
            <field name="parent_id" nolabel="0"/>
        </field>

        <field name="name" position="after">
          <group>
              <field name="es_sucursal"/>
          </group>
        </field>

      </field>
    </record>


   

